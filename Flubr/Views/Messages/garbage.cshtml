@model UserMessagesObj
@using Microsoft.AspNetCore.Identity
@using Flubr.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@foreach(var m in Model.UM){
            
                
                    if(m.Id == @UserManager.GetUserAsync(User).Result.Id){
            
                            
                                <li class="me">
                                    <div class="entete">
                                        <span class="status green"></span>
                                        <h2>@m.applicationUser.FirstName</h2>
                                        <h3>@m.Date</h3>
                                    </div>
                                    <div class="triangle"></div>
                                    <div class="message">
                                        @m.Message
                                    </div>
                                </li>
                           
            
            
            
            
            }else{
            
                       
                            <li class="you">
                                <div class="entete">
                                    <span class="status green"></span>
                                    <h2>@m.applicationUser.FirstName</h2>
                                    <h3>@m.Date</h3>
                                </div>
                                <div class="triangle"></div>
                                <div class="message">
                                    @m.Message
                                </div>
                            </li>
               
                      
            }
            
            
            
            
            
            
            
            }


     <ul>
                @foreach(var item in Model.MM){
                
                 <li>
                    
                    <div>
                        <a asp-controller="Messages" asp-action="Open" asp-route-id="@item.MessageId"><h2>@item.MessageName</h2></a>
                    </div>
                </li>
                
                
                }
            </ul>